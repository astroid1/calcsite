---
import BaseLayout from "@/layouts/BaseLayout.astro";
import AdSlot from "@/components/AdSlot.astro";
const title = "Holiday Countdown (US)";
const description = "See days until major US holidays.";
---

<BaseLayout {title} {description} pathname="/calculators/holiday-countdown">
  <div class="card">
    <h1>{title}</h1>
    <p>Select a holiday to see the countdown.</p>
    <form id="h-form">
      <label for="holiday">Holiday</label>
      <select id="holiday" name="holiday"></select>
      <div style="margin-top:12px;"><button class="btn" type="button" id="holiday-calc">Show Countdown</button></div>
    </form>
    <div id="holiday-result" style="margin-top:16px;"></div>
    <AdSlot id="hol-inline-1" />
  </div>

  <script defer src="/js/holiday-countdown.js"></script>
</BaseLayout>

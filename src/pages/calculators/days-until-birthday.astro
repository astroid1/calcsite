---
import BaseLayout from "@/layouts/BaseLayout.astro";
import AdSlot from "@/components/AdSlot.astro";
const title = "Days Until Your Birthday";
const description = "Countdown to your next birthday with leap-year handling.";
---

<BaseLayout {title} {description} pathname="/calculators/days-until-birthday">
  <section class="hero">
    <h1>{title}</h1>
    <p class="helper">Pick your month and day. Weâ€™ll handle leap years automatically.</p>
  </section>

  <section class="card" style="margin-top:18px;">
    <form id="bday-form">
      <label for="month">Month</label>
      <select id="month" name="month">
        {Array.from({ length: 12 }).map((_, i) => (
          <option value={i + 1}>{new Date(0, i).toLocaleString("en", { month: "long" })}</option>
        ))}
      </select>

      <label for="day">Day</label>
      <input id="day" name="day" type="number" min="1" max="31" placeholder="e.g., 21" />

      <div style="margin-top:14px; display:flex; gap:10px;">
        <button class="btn" type="button" id="bday-calc">Calculate</button>
        <button class="btn" type="button" id="bday-clear">Clear</button>
      </div>
    </form>
  </section>

  <section id="bday-result" style="margin-top:16px;"></section>

  <AdSlot id="bday-inline-1" />
  <script defer src="/js/days-until-birthday.js"></script>
</BaseLayout>

---
import BaseLayout from "@/layouts/BaseLayout.astro";
import AdSlot from "@/components/AdSlot.astro";
const title = "Days Until Your Birthday";
const description = "Countdown to your next birthday with leap-year handling.";
---

<BaseLayout {title} {description} pathname="/calculators/days-until-birthday">
  <div class="card">
    <h1>{title}</h1>
    <form id="bday-form">
      <label for="month">Month</label>
      <select id="month" name="month">
        {Array.from({ length: 12 }).map((_, i) => (
          <option value={i + 1}>{new Date(0, i).toLocaleString("en", { month: "long" })}</option>
        ))}
      </select>
      <label for="day">Day</label>
      <input id="day" name="day" type="number" min="1" max="31" placeholder="e.g., 21" />
      <div style="margin-top:12px;"><button class="btn" type="button" id="bday-calc">Calculate</button></div>
    </form>
    <div id="bday-result" style="margin-top:16px;"></div>
    <AdSlot id="bday-inline-1" />
  </div>

  <!-- Browser-only script -->
  <script defer src="/js/days-until-birthday.js"></script>
</BaseLayout>
